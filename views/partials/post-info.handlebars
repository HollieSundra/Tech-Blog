<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href="/post/{{id}}" class="post-link">{{title}}</a>
            </div>
            <div class="created-by">
                <p class="post-info">
                    Posted by <b>{{user.username}}</b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>
